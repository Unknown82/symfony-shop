{% extends 'base.html.twig' %}

{% block title %}Payment Confirmation!{% endblock %}

{% block body %}

    <div class="min-h-screen bg-gradient-to-br from-green-100 via-blue-100 to-white py-12 px-4">
        <div class="max-w-2xl mx-auto bg-white shadow-xl rounded-2xl p-8 border border-blue-100 text-center">

            <div class="mb-6">
                <h1 class="text-3xl font-extrabold text-green-700 mb-2">✔️ Order Confirmed!</h1>
                <p class="text-gray-600 text-lg">Thank you for your purchase. Your order has been placed successfully.</p>
            </div>
            <div class="bg-gray-50 rounded-lg p-6 text-left shadow-inner">
                <p class="mb-2 text-gray-700"><span class="font-semibold text-gray-900">🆔 Order ID:</span> {{ order.id }}</p>
                <p class="mb-2 text-gray-700"><span class="font-semibold text-gray-900">👤 Name:</span> {{ order.userName }}</p>
                <p class="mb-2 text-gray-700"><span class="font-semibold text-gray-900">💰 Gesamt:</span> ${{ order.total | number_format(2) }}</p>
                <p class="text-gray-700"><span class="font-semibold text-gray-900">🎁 Zahlungsstatus:</span> {{ order.paymentStatus }}</p>
                <p class="text-gray-700"><span class="font-semibold text-gray-900">🏠 Ihre Adresse:</span> {{ order.userAddress }}</p>
            </div>

            <a href="{{ path('app_home') }}"
               class="mt-6 inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg transition duration-300">
                ← Zurück zur Startseite
            </a>

        </div>
    </div>

{% endblock %}
